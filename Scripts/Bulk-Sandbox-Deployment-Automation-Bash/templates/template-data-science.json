{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "virtualMachineName": {
            "type": "string",
            "metadata": {
                "description": "This is the name of the your VM"
            }
        },
        "virtualMachineSize": {
            "type": "string",
            "metadata": {
                "description": "This is the size of your VM"
            }
        },
        "storageAccountName": {
            "type": "string",
            "metadata": {
                "description": "This is the name of the your storage account"
            }
        },
        "storageAccountType": {
            "type": "string",
            "metadata": {
                "description": "This is the type of the your storage account"
            }
        },
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "User Name for the Virtual Machine"
            }
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Password for the Virtual Machine"
            }
        },
        "virtualNetworkName": {
            "type": "string",
            "metadata": {
                "description": "This is the name of your Virtual Network"
            }
        },
        "networkInterfaceName": {
            "type": "string",
            "metadata": {
                "description": "This is the name of your Network Interface"
            }
        },
        "networkSecurityGroupName": {
            "type": "string",
            "metadata": {
                "description": "This is the name of your Network Security Group"
            }
        },
        "addressPrefix": {
            "type": "string",
            "metadata": {
                "description": "Address prefix, or full IP address for the destination"
            }
        },
        "subnetName": {
            "type": "string",
            "metadata": {
                "description": "Subnet Name to be used within the Virtual Network"
            }
        },
        "subnetPrefix": {
            "type": "string",
            "metadata": {
                "description": "Used to create subnet. Must match in the case that the subnet does exist"
            }
        },
        "publicIpAddressName": {
            "type": "string",
            "metadata": {
                "description": "Public IP address name for VM"
            }
        },
        "publicIpAddressType": {
            "type": "string",
            "metadata": {
                "description": "Public IP address for VM"
            }
        },
        "dnsPrefix": {
            "type": "string",
            "metadata": {
                "description": "Unique DNS Name for the Public IP used to access the Virtual Machine"
            }
        },
        "className": {
            "type": "string",
            "metadata": {
                "description": "Class Name for Tags"
            }
        },
        "classID": {
            "type": "string",
            "metadata": {
                "description": "Class ID for Tags"
            }
        },
        "studentName": {
            "type": "string",
            "metadata": {
                "description": "Student Name for Tags"
            }
        },
        "studentEmail": {
            "type": "string",
            "metadata": {
                "description": "Student Email for Tags"
            }
        },
        "studentLogin": {
            "type": "string",
            "metadata": {
                "description": "User Name for the Virtual Machine (student)"
            }
        },
        "studentPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Password for the Virtual Machine (student)"
            }
        },
        "resourceGroupName": {
            "type": "string",
            "metadata": {
                "description": "The name of the resource group for your Virtual Machine"
            }
        },
        "downloadFileUrl": {
            "type": "string",
            "metadata": {
                "description": "This is the URL that will be uploaded to your Virtual Machine"
            }
        },
        "imageId": {
            "type": "string",
            "metadata": {
                "description": "This is the image id that your VM will be deployed"
            }
        },
        "createOption": {
            "type": "string",
            "allowedValues": [
                "FromImage",
                "Empty",
                "Attach"
            ],
            "metadata": {
                "description": "Specify this option to create a virtual machine from a specialized disk"
            }
        },
        "osType": {
            "type": "string",
            "allowedValues": [
                "windows",
                "linux"
            ],
            "metadata": {
                "description": "This is the OS that your VM will be running"
            }
        },
        "diskType": {
            "type": "string",
            "allowedValues": [
                "manage",
                "unmanage"
            ],
            "metadata": {
                "description": "This is the os disk type of your VM"
            }
        },
        "vmType": {
            "type": "string",
            "metadata": {
                "description": "Describes the VM type"
            }
        },
        "dataDiskType": {
            "type": "string",
            "allowedValues": [
                "manage",
                "unmanage",
                "empty"
            ],
            "metadata": {
                "description": "This is the data disk type of your VM"
            }
        },
        "postInstallFileName": {
            "type": "string",
            "metadata": {
                "description": "Script name for the Post Deployment"
            }
        },
        "fileUris": {
            "type": "string",
            "metadata": {
                "description": "The uri list of the scripts"
            }
        }
    },
    "variables": {
        "storageUri": "[concat('https://',parameters('storageAccountName'),'.blob.core.windows.net/')]",
        "images": {
            "ds-vm-ubuntu": {
                "publisher": "microsoft-ads",
                "offer": "linux-data-science-vm-ubuntu",
                "sku": "linuxdsvmubuntu",
                "version": "latest"
            },
            "ds-vm-centos": {
                "publisher": "microsoft-ads",
                "offer": "linux-data-science-vm",
                "sku": "linuxdsvm",
                "version": "latest"
            },
            "ds-vm-windows": {
                "publisher": "microsoft-ads",
                "offer": "standard-data-science-vm",
                "sku": "standard-data-science-vm",
                "version": "latest"
            },
            "ds-vm-windows-2016": {
                "publisher": "microsoft-ads",
                "offer": "windows-data-science-vm",
                "sku": "windows2016",
                "version": "latest"
            }
        },
        "plans": {
            "ds-vm-ubuntu": {
                "name": "linuxdsvmubuntu",
                "publisher": "microsoft-ads",
                "product": "linux-data-science-vm-ubuntu"
            },
            "ds-vm-centos": {
                "name": "linuxdsvm",
                "publisher": "microsoft-ads",
                "product": "linux-data-science-vm"
            },
            "ds-vm-windows": {
                "name": "standard-data-science-vm",
                "publisher": "microsoft-ads",
                "product": "standard-data-science-vm"
            },
            "ds-vm-windows-2016": {
                "name": "windows2016",
                "publisher": "microsoft-ads",
                "product": "windows-data-science-vm"
            }
        },
        "tagValues": {
            "ClassName": "[parameters('className')]",
            "ClassID": "[parameters('classID')]",
            "StudentEmail": "[parameters('studentEmail')]",
            "StudentLogin": "[parameters('studentLogin')]",
            "StudentName": "[parameters('studentName')]"
        },
        "osDisks": {
            "manage": {
                "name": "[concat(parameters('virtualMachineName'),'-osdisk')]",
                "createOption": "FromImage",
                "managedDisk": {
                    "storageAccountType": "[parameters('storageAccountType')]"
                }
            },
            "unmanage": {
                "name": "[concat(parameters('virtualMachineName'),'-osdisk')]",
                "createOption": "FromImage",
                "vhd": {
                    "uri": "[concat(variables('storageUri'), 'vhds/', parameters('virtualMachineName'), '-osdisk' , '.vhd')]"
                }
            }
        },
        "dataDisks": {
            "manage": [
                {
                    "name": "[concat(parameters('virtualMachineName'), '-disk-1')]",
                    "createOption": "[parameters('createOption')]",
                    "lun": 0,
                    "diskSizeGB": 50,
                    "managedDisk": {
                        "storageAccountType": "[parameters('storageAccountType')]"
                    }
                }
            ],
            "unmanage": [
                {
                    "name": "[concat('data', parameters('virtualMachineName'), 'storage.vhd')]",
                    "createOption": "[parameters('createOption')]",
                    "lun": 0,
                    "diskSizeGB": 50,
                    "vhd": {
                        "uri": "[concat(variables('storageUri'), 'vhds/', 'data', parameters('virtualMachineName'), 'storage.vhd')]"
                    }
                }
            ],
            "empty": []
        },
        "securityRules": {
            "linux": [
                {
                    "name": "Jupyter",
                    "properties": {
                        "priority": 1010,
                        "sourceAddressPrefix": "*",
                        "protocol": "TCP",
                        "destinationPortRange": "9999",
                        "access": "Allow",
                        "direction": "Inbound",
                        "sourcePortRange": "*",
                        "destinationAddressPrefix": "*"
                    }
                },
                {
                    "name": "JupyterHub",
                    "properties": {
                        "priority": 1020,
                        "sourceAddressPrefix": "*",
                        "protocol": "TCP",
                        "destinationPortRange": "8000",
                        "access": "Allow",
                        "direction": "Inbound",
                        "sourcePortRange": "*",
                        "destinationAddressPrefix": "*"
                    }
                },
                {
                    "name": "RStudioServer",
                    "properties": {
                        "priority": 1030,
                        "sourceAddressPrefix": "*",
                        "protocol": "TCP",
                        "destinationPortRange": "8787",
                        "access": "Allow",
                        "direction": "Inbound",
                        "sourcePortRange": "*",
                        "destinationAddressPrefix": "*"
                    }
                },
                {
                    "name": "default-allow-ssh",
                    "properties": {
                        "priority": 1040,
                        "sourceAddressPrefix": "*",
                        "protocol": "TCP",
                        "destinationPortRange": "22",
                        "access": "Allow",
                        "direction": "Inbound",
                        "sourcePortRange": "*",
                        "destinationAddressPrefix": "*"
                    }
                }
            ],
            "windows": [
                {
                    "name": "winRM",
                    "properties": {
                        "priority": 1040,
                        "sourceAddressPrefix": "*",
                        "protocol": "TCP",
                        "destinationPortRange": "5986",
                        "access": "Allow",
                        "direction": "Inbound",
                        "sourcePortRange": "*",
                        "destinationAddressPrefix": "*"
                    }
                },
                {
                    "name": "ssl",
                    "properties": {
                        "priority": 1050,
                        "sourceAddressPrefix": "*",
                        "protocol": "TCP",
                        "destinationPortRange": "443",
                        "access": "Allow",
                        "direction": "Inbound",
                        "sourcePortRange": "*",
                        "destinationAddressPrefix": "*"
                    }
                },
                {
                    "name": "IPythonNB",
                    "properties": {
                        "priority": 1010,
                        "sourceAddressPrefix": "*",
                        "protocol": "TCP",
                        "destinationPortRange": "9999",
                        "access": "Allow",
                        "direction": "Inbound",
                        "sourcePortRange": "*",
                        "destinationAddressPrefix": "*"
                    }
                },
                {
                    "name": "MSSQL",
                    "properties": {
                        "priority": 1020,
                        "sourceAddressPrefix": "*",
                        "protocol": "TCP",
                        "destinationPortRange": "1433",
                        "access": "Allow",
                        "direction": "Inbound",
                        "sourcePortRange": "*",
                        "destinationAddressPrefix": "*"
                    }
                },
                {
                    "name": "default-allow-rdp",
                    "properties": {
                        "priority": 1030,
                        "sourceAddressPrefix": "*",
                        "protocol": "TCP",
                        "destinationPortRange": "3389",
                        "access": "Allow",
                        "direction": "Inbound",
                        "sourcePortRange": "*",
                        "destinationAddressPrefix": "*"
                    }
                }
            ]
        },
        "extensions": {
            "windows": {
                "publisher": "Microsoft.Compute",
                "type": "CustomScriptExtension",
                "typeHandlerVersion": "1.4",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "fileUris": "[split(parameters('fileUris'), ' ')]"
                },
                "protectedSettings": {
                    "commandToExecute": "[concat('powershell -ExecutionPolicy Unrestricted -File extensions.ps1 -userName ',parameters('studentLogin'),' -userPassword ',parameters('studentPassword'),' -url ',parameters('downloadFileUrl'), ' -postInstallFileName ', parameters('postInstallFileName'))]"
                }
            },
            "linux": {
                "publisher": "Microsoft.Azure.Extensions",
                "type": "CustomScript",
                "typeHandlerVersion": "2.0",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "fileUris": "[split(parameters('fileUris'), ' ')]",
                    "commandToExecute": "[concat('bash extensions.sh -u ',parameters('downloadFileUrl'), ' -l ',parameters('studentLogin'),' -p ',parameters('studentPassword'), ' -f ', parameters('postInstallFileName'))]"
                }
            }
        },
        "osProfiles": {
            "windows": {
                "computerName": "[parameters('virtualMachineName')]",
                "adminUsername": "[parameters('adminUsername')]",
                "adminPassword": "[parameters('adminPassword')]",
                "windowsConfiguration": {
                    "provisionVmAgent": "true"
                }
            },
            "linux": {
                "computerName": "[parameters('virtualMachineName')]",
                "adminUsername": "[parameters('adminUsername')]",
                "adminPassword": "[parameters('adminPassword')]"
            }
        },
        "vnetId": "[resourceId(parameters('resourceGroupName'),'Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
        "subnetRef": "[concat(variables('vnetId'), '/subnets/', parameters('subnetName'))]"
    },
    "resources": [
        {
            "comments": "https://docs.microsoft.com/en-us/azure/templates/microsoft.storage/storageaccounts",
            "name": "[parameters('storageAccountName')]",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2015-06-15",
            "location": "[resourceGroup().location]",
            "properties": {
                "accountType": "[parameters('storageAccountType')]"
            }
        },
        {
            "comments": "https://docs.microsoft.com/en-us/azure/templates/microsoft.compute/virtualmachines",
            "name": "[parameters('virtualMachineName')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2016-04-30-preview",
            "location": "[resourceGroup().location]",
            "tags": "[variables('tagValues')]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', parameters('networkInterfaceName'))]",
                "[concat('Microsoft.Storage/storageAccounts/', parameters('storageAccountName'))]"
            ],
            "properties": {
                "osProfile": "[variables('osProfiles')[parameters('osType')]]",
                "hardwareProfile": {
                    "vmSize": "[parameters('virtualMachineSize')]"
                },
                "storageProfile": {
                    "imageReference": "[variables('images')[parameters('vmType')]]",
                    "osDisk": "[variables('osDisks')[parameters('diskType')]]",
                    "dataDisks": "[variables('dataDisks')[parameters('dataDiskType')]]"
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('networkInterfaceName'))]"
                        }
                    ]
                }
            },
            "plan": "[variables('plans')[parameters('vmType')]]",
            "resources": [
                {
                    "apiVersion": "2015-06-15",
                    "type": "extensions",
                    "name": "CustomScript",
                    "location": "[resourceGroup().location]",
                    "dependsOn": [
                        "[parameters('virtualMachineName')]"
                    ],
                    "properties": "[variables('extensions')[parameters('osType')]]"
                }
            ]
        },
        {
            "comments": "https://docs.microsoft.com/en-us/azure/templates/microsoft.network/virtualnetworks",
            "name": "[parameters('virtualNetworkName')]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2016-12-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('addressPrefix')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[parameters('subnetName')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnetPrefix')]"
                        }
                    }
                ]
            }
        },
        {
            "comments": "https://docs.microsoft.com/en-us/azure/templates/microsoft.network/networkinterfaces",
            "name": "[parameters('networkInterfaceName')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2016-09-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Network/virtualNetworks/', parameters('virtualNetworkName'))]",
                "[concat('Microsoft.Network/publicIpAddresses/', parameters('publicIpAddressName'))]",
                "[concat('Microsoft.Network/networkSecurityGroups/', parameters('networkSecurityGroupName'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            },
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIpAddress": {
                                "id": "[resourceId(parameters('resourceGroupName'),'Microsoft.Network/publicIpAddresses', parameters('publicIpAddressName'))]"
                            }
                        }
                    }
                ],
                "networkSecurityGroup": {
                    "id": "[resourceId(parameters('resourceGroupName'), 'Microsoft.Network/networkSecurityGroups', parameters('networkSecurityGroupName'))]"
                }
            }
        },
        {
            "comments": "https://docs.microsoft.com/en-us/azure/templates/microsoft.network/publicipaddresses",
            "name": "[parameters('publicIpAddressName')]",
            "type": "Microsoft.Network/publicIpAddresses",
            "apiVersion": "2016-09-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "publicIpAllocationMethod": "[parameters('publicIpAddressType')]",
                "dnsSettings": {
                    "domainNameLabel": "[parameters('dnsPrefix')]"
                }
            }
        },
        {
            "comments": "https://docs.microsoft.com/en-us/azure/templates/microsoft.network/networksecuritygroups",
            "name": "[parameters('networkSecurityGroupName')]",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2016-09-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "securityRules": "[variables('securityRules')[parameters('osType')]]"
            }
        }
    ],
    "outputs": {
        "adminUsername": {
            "type": "string",
            "value": "[parameters('adminUsername')]"
        },
        "dnsPrefix": {
            "type": "string",
            "value": "[parameters('dnsPrefix')]"
        }
    }
}